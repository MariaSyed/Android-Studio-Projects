<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="fi.metropolia.marias.calculator.MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/divide" />

    <Button
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="1"
        android:layout_above="@+id/c"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/divide"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="/"
        android:layout_gravity="right"
        android:layout_above="@+id/multiply"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/five"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="5"
        android:layout_alignTop="@+id/four"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one" />

    <Button
        android:id="@+id/two"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="2"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/one"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one" />

    <Button
        android:id="@+id/three"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="3"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two" />

    <Button
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="4"
        android:layout_above="@+id/one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/six"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="6"
        android:layout_alignTop="@+id/five"
        android:layout_toRightOf="@+id/five"
        android:layout_toEndOf="@+id/five" />

    <Button
        android:id="@+id/seven"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="7"
        android:layout_above="@+id/five"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/eight"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="8"
        android:layout_alignTop="@+id/seven"
        android:layout_toRightOf="@+id/four"
        android:layout_toEndOf="@+id/four" />

    <Button
        android:id="@+id/nine"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="9"
        android:layout_alignTop="@+id/eight"
        android:layout_toRightOf="@+id/five"
        android:layout_toEndOf="@+id/five" />

    <Button
        android:id="@+id/zero"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="*"
        android:layout_alignTop="@+id/six"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/minus"
        android:layout_alignStart="@+id/minus" />

    <Button
        android:id="@+id/minus"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="-"
        android:layout_below="@+id/multiply"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/c"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="C"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero" />

    <Button
        android:id="@+id/equals"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="="
        android:layout_alignTop="@+id/c"
        android:layout_toRightOf="@+id/c"
        android:layout_toEndOf="@+id/c" />

</RelativeLayout>
